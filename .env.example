# ==================================================
# TAIC Smart Assistant Environment Configuration
# ==================================================
# Copy this file to .env and fill in your actual values
# This file contains all environment variables needed for the application

# Items you need to configure:
# - OpenAI API Key
# - VoyageAI API Key
# - Azure Storage Account Name and Key
# - Azure AD OAuth credentials (Client ID, Client Secret, Tenant ID)

# ==================================================
# devolopment setttings
NO_LOGS=true # Stops the application from writing any logs to storage

# ==================================================
# LLM Provider Configuration
# ==================================================
AZURE_OPENAI_ENDPOINT=endpoint_here
AZURE_OPENAI_API_KEY=key_here

# ==================================================
# Vector Database Configuration
# ==================================================
# Path to the vector database (local directory)
VECTORDB_PATH=vectordb
VECTORDB_TABLE_NAME=all_document_types

AZURE_AI_ENDPOINT=your_endpoint_here
AZURE_AI_API_KEY=your_api_key_here
# ==================================================
# Azure Storage Configuration
# ==================================================
# Azure Storage Account for conversation and search logs
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key

# Azure Table Storage - table names for metadata
CONVERSATION_METADATA_TABLE_NAME=smartassistantconversationsmetadata
KNOWLEDGE_SEARCH_LOGS_TABLE_NAME=knowledgesearches

# Azure Blob Storage - container names for data storage
CONVERSATION_CONTAINER_NAME=smartassistantconversations
KNOWLEDGE_SEARCH_CONTAINER_NAME=knowledgesearchresults

# ==================================================
# Azure AD OAuth Configuration
# ==================================================
# Azure AD app registration credentials for user authentication
CLIENT_ID=your_azure_ad_client_id
CLIENT_SECRET=your_azure_ad_client_secret
TENANT_ID=your_azure_ad_tenant_id


